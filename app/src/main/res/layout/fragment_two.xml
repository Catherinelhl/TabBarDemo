<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <android.support.design.widget.TabLayout
            android:id="@+id/top_tab_layout"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/colorAccent"
            app:tabTextColor="@color/colorPrimary"
            android:layout_height="50dp"/>
    <TextView
            android:id="@+id/tv_text"
            android:layout_gravity="center"
            android:text="22222"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <bcaas.io.tabbardemo.view.RichText
            xmlns:view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rt_text"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="554"
            android:textColor="#FFFFFF"
            view:drawable_location="top"
            view:drawable_height="30dp"
            view:drawable_src="@drawable/icon_home"
            view:drawable_width="30dp"/>
    <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"/>


</LinearLayout>